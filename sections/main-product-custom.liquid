{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'description' -%}
      {%- if product.description != blank -%}
        <div class="product__description rte quick-add-hidden" {{ block.shopify_attributes }}>
          {{ product.description }}
        </div>
      {%- endif -%}
  {%- endcase -%}
{%- endfor -%}

{% schema %}
   {
    "name": "商品説明",
    "settings": [],
    "blocks": [
      {
        "type": "description",
        "name": "t:sections.main-product.blocks.description.name",
        "limit": 1
      }
    ],
    "presets": [
      {
        "name": "商品説明"
      }
    ],
    "templates" : [
      "product"
    ]
  }
{% endschema %}